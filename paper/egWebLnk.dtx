% commands 
%   \httpAddr             {URL *without* leading string 'http:'}
%   \ftpAddr              {URL *without* leading string 'ftp:'}
%   \httpLinkPlusFootnote {URL *without* leading 'http:'}{source text}
%   \URL		  {url}
