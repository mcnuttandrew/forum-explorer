{
   "name": "FEX: Forum Explorer",
   "version": "1.0.3",
   "description": "Explore forum structured data through tree visualization",
   "manifest_version": 2,
   "content_scripts": [
     {
       "matches": ["https://news.ycombinator.com/item*"],
       "js": ["app-bundle.js"],
       "run_at": "document_end"
     }
   ],
   "background": {
     "scripts": [
       "background-bundle.js"
     ],
     "persistent": false
   },
   "icons": {
      "16": "./fex-16.png",
      "32": "./fex-32.png",
      "48": "./fex-48.png",
      "128": "./fex-128.png"
    }
 }
